{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "CommonJS",
		"target": "ES2020",

		"types": ["node"],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"strict": true,
		"skipLibCheck": true
	}
}
